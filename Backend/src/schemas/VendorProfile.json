{
    "$id": "VendorProfile",
    "allOf": [
      { "$ref": "User" },
      {
        "type": "object",
        "properties": {
          "vendorDetails": {
            "type": "object",
            "properties": {
              "productsOffered": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "productId": { "type": "string" },
                    "productName": { "type": "string" },
                    "category": { "type": "string" },
                    "price": { "type": "number" },
                    "availabilityStatus": { "type": "string", "enum": ["In Stock", "Out of Stock"] }
                  },
                  "required": ["productId", "productName", "category", "price", "availabilityStatus"]
                }
              }
            },
            "required": ["productsOffered"]
          }
        },
        "required": ["vendorDetails"]
      }
    ]
  }
  