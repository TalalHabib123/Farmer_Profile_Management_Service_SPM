{
  "$id": "FarmerProfile",
  "allOf": [
    { "$ref": "User" },
    {
      "type": "object",
      "properties": {
        "user": { "type": "string" }, 
        "farmDetails": {
          "type": "object",
          "properties": {
            "farmLocation": {
              "type": "object",
              "properties": {
                "latitude": { "type": "number" },
                "longitude": { "type": "number" },
                "address": { "type": "string" }
              },
              "required": ["latitude", "longitude", "address"]
            },
            "farmSize": {
              "type": "number",
              "minimum": 0
            },
            "cropsGrown": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1
            },
            "licenseCertifications": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "required": ["farmLocation", "farmSize", "cropsGrown"]
        },
        "creditScore": {
          "type": "object",
          "properties": {
            "score": {
              "type": "number",
              "minimum": 300,
              "maximum": 850
            },
            "lastUpdated": { "type": "string", "format": "date-time" }
          }
        },
        "bankDetails": {
          "type": "object",
          "properties": {
            "accountNumber": { "type": "string" },
            "bankName": { "type": "string" },
            "accountHolder": { "type": "string" }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["user", "farmDetails"]
    }
  ]
}
